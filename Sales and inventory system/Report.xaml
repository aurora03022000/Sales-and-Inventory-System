<Page x:Class="Sales_and_Inventory_System.Report"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Sales_and_Inventory_System"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Report">
    <Grid>
        <!-- Background -->
        <Image Source="img/Background.jpg" Panel.ZIndex="0" Grid.ColumnSpan="2" Stretch="Fill" Opacity="0.175"/>
        <!-- Background -->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="21"></RowDefinition>
                <RowDefinition/>
                <RowDefinition Height="21"></RowDefinition>
            </Grid.RowDefinitions>

            <Grid Grid.Row="1">
                <Grid HorizontalAlignment="Left" VerticalAlignment="Top" Height="32" Width="259" Margin="0,6,0,0">
                    <ComboBox>
                        <ComboBoxItem>Daily</ComboBoxItem>
                        <ComboBoxItem>Weekly</ComboBoxItem>
                        <ComboBoxItem>Monthly</ComboBoxItem>
                        <ComboBoxItem>Yearly</ComboBoxItem>
                    </ComboBox>
                </Grid>
                <DataGrid Margin="0,43,0,0"></DataGrid>
            </Grid>
        </Grid>
    </Grid>
</Page>
